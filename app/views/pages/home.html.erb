	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge"> 
		<meta name="viewport" content="width=device-width, initial-scale=1"> 
		<title>First Flight Survey</title>
	</head>
	<body>
		<div class="container">
			<!-- Top Navigation -->

			<header class="codrops-header">
				<h1>Thank you for taking this survey. <span>5 Questions for First Flight Freshman</span></h1>	
			</header>
			<section>
				<form accept-charset="UTF-8" action="../flights" method="post" id="theForm" class="simform">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
					<div class="simform-inner">
						<ol class="questions">
							<li>
								<span><label for="flight_one">So what social media site do you prefer to use?</label></span>
								<input id="q1" name="flight[one]" type="text"/>
							</li>
							<li>
								<span><label for="q2">Would you rather use Instagram, Twitter, both, or neither?</label></span>
								<input id="q2" name="flight[two]" type="text"/>
							</li>
							<li>
								<span><label for="q3">Do you use Pinterest?</label></span>
								<input id="q3" name="flight[three]" type="text"/>
							</li>
							<li>
								<span><label for="q4">Are you taking this survey on a mobile device?</label></span>
								<input id="q4" name="flight[four]" type="text"/>
							</li>
							<li>
								<span><label for="q5">Would you like to leave a brief comment about the First Flight website?</label></span>
								<input id="q5" name="flight[five]" type="text"/>
							</li>
						</ol><!-- /questions -->
						<button class="submit" name="commit" type="submit" value="Create Flight">Send answers</button>
						<div class="controls">
							<button class="next"></button>
							<div class="progress"></div>
							<span class="number">
								<span class="number-current"></span>
								<span class="number-total"></span>
							</span>
							<span class="error-message"></span>
						</div><!-- / controls -->
					</div><!-- /simform-inner -->
					<span class="final-message"></span>
				</form><!-- /simform -->			
			</section>

		</div><!-- /container -->
		<script src="js/classie.js"></script>
		<script src="js/stepsForm.js"></script>
		<script>
			var theForm = document.getElementById( 'theForm' );
                        //disable form autocomplete
                        theForm.setAttribute( "autocomplete", "off" );

			new stepsForm( theForm, {
				onSubmit : function( form ) {
					// hide form
					classie.addClass( theForm.querySelector( '.simform-inner' ), 'hide' );
					
          form.submit()
          /*
					or
					AJAX request (maybe show loading indicator while we don't have an answer..)
					*/

					// let's just simulate something...
					var messageEl = theForm.querySelector( '.final-message' );
					messageEl.innerHTML = 'UNT #19, good luck with your first year on campus.';
					classie.addClass( messageEl, 'show' );
				}
			} );
		</script>
	</body>
